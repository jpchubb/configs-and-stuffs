vbell off

defutf8 on

# terminfo and termcap for nice 256 color terminal
# allow bold colors - necessary for some reason
attrcolor b ".I"
# tell screen how to set colors. AB = background, AF=foreground
termcapinfo xterm 'Co#256:AB=\E[48;5;%dm:AF=\E[38;5;%dm'
# erase background with current bg color
defbce "on" 
# set TERM
term screen-256color-bce

#replace Ctrl-A with Ctrl-Z
escape ^Zz

backtick 1 5 5 battscript
backtick 2 5 5 ./bin/mpd

screen -t emacs 1 emacs -nw
screen -t irssi 2 irssi
screen -t email 3 mutt
screen -t ghci  4 ghci
screen -t MPD   5 ncmpc
hardstatus alwayslastline "%{+b rk} %H%{yk} | %w | %85= Batt: %1` | %{gk}%c %{yk} %D %d.%m.%Y %{wk}"
bind c screen 1
bind 0 select 10
screen 1
select 1