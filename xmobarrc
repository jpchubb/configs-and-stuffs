Config { font = "xft:Ubuntu-8"
       , bgColor = "#2b2b2b"
       , fgColor = "#8fb28f"
       , position = TopW L 100
       , lowerOnStart = True
       , commands = [ Run Cpu ["-L","3","-H","50","--normal","#FFD7A7","--high","#E89393"] 10
                    , Run Memory ["-t","Mem: <usedratio>%"] 10
                    , Run Swap [] 10
		    , Run Com "bash" ["mpd"] "mpc" 10
                    , Run Date "%a %b %_d %H:%M" "date" 10
                    , Run StdinReader
                    , Run CommandReader "~/.xmonad/ledmon" "LED"
                    ]
       , sepChar = "%"
       , alignSep = "}{"
       , template = "%StdinReader% }{ %mpc% | <fc=#41363C>%LED%</fc> %cpu% | %memory% * %swap% | <fc=#DCA3A3>%date%</fc>"
       }
